


  <div class="list-title-container">
    <div class="image-container">
      <%= image_tag @list.photo, height: 300, width: 460, crop: :fill, class: 'list-image' %>
    </div>

    <div class="card-text">
        <h1 class="card-title"><%= @list.name %></h1>
        <h3 class="bookmark-count"><%= @list.bookmarks.count %> movie(s) in this list</h3>
        <div class="button-array">
          <%= link_to 'Add to list',  new_list_bookmark_path(@list), class: 'btn btn-secondary' %>
          <%= link_to 'Back to lists', lists_path, class: 'btn btn-secondary'%>
          <%= link_to 'Remove List', new_list_path(@list), method: :delete,  data: { confirm: 'Are you sure you want to delete this list?'}, class: 'btn btn-secondary' %>
        </div>
    </div>
  </div>


<div class="flex-container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src=<%= bookmark.movie.poster_url %> alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <P class= "card-title"><%= bookmark.comment %></P>
        <%= link_to 'Details', movie_path(bookmark.movie.id) %> |
        <%= link_to 'Remove', bookmark_path(bookmark), method: :delete %>
      </div>
    </div>
  <% end %>

</div>
