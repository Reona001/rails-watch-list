<div class="card" style="width: 18rem;">
    <div class="card-body">
      <h1 class="card-title"><%= @list.name %></h1>
      <h3 class="bookmark-count"><%= @list.bookmarks.count %> movie(s) in this list</h3>
      <%= link_to 'Add to list',  new_list_bookmark_path(@list) %> |
      <%= link_to 'Back to lists', lists_path %>
    </div>
  </div>



<div class="flex-container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src=<%= bookmark.movie.poster_url %> alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <P class= "card-title"><%= bookmark.comment %></P>
        <%= link_to 'Details', movie_path(bookmark.movie.id) %> |
        <%= link_to 'Remove', bookmark_path(bookmark), method: :delete %>
      </div>
    </div>
  <% end %>
</div>
